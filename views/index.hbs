<!DOCTYPE html>
<html lang="en">

<head>
    <title>Node</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".orders").click(function () {
                $.ajax({
                    type: 'get',
                    url: '/orders',
                    dataType: 'json',
                    contentType: "application/json",
                    success: function (data) {
                        window.location = "/orders";
                    }
                });
            });

            $(".receipts").click(function () {
                $.ajax({
                    type: 'get',
                    url: '/receipt',
                    dataType: 'json',
                    contentType: "application/json",
                    success: function (data) {
                        window.location = "/receipt";
                    }
                });
            });

            $("#form1").submit(function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: "POST",
                    url: '/specificOrder',
                    data: form.serialize(),
                    success: function (data) {
                        window.location.href = "/specificOrder";
                    }
                });
            });

            $("#form2").submit(function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: "POST",
                    url: '/specificReceipt',
                    data: form.serialize(),
                    success: function (data) {
                        window.location.href = "/specificReceipt";
                    }
                });
            });
        });
    </script>
</head>

<body>

    <div class="container">
        <h2>Sales Tax Problem</h2>
        <form method="POST" action="/">
            <div class="form-group">
                <label for="comment">Input:</label>
                <textarea class="form-control" rows="15" id="comment" name="problem"></textarea>
            </div>
            <div class="container">
                <input type="submit" name='submit' value="Submit">
            </div>
        </form>
        <div class="container"></div>
        <button class="orders" type="submit" value="View Orders">View Orders</button><br>
        <button class="receipts" type="submit" value="View Receipts">View Receipts</button>

        <form id="form1" action='/specificOrder'>
            <input id="oid" type="text" name='oid'>
            <input type="submit" name='submit' value="View Order by Id">
        </form>

        <form id="form2" action="/specificReceipt">
            <input id="rid" type="text" name='rid'>
            <input type="submit" name='submit' value="View Receipt by Id">
        </form>
    </div>
</body>

</html>